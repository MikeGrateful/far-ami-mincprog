.container,
page {
    background: #fff;
    font-size: 24rpx;
}





.scroll-view {
    width: 100%;
    height: 10vh;
    flex-shrink: 0;
    white-space: nowrap;
    background: #F7F7F7;
    border-top: 8rpx solid #F7F7F7;
}

.scroll-item {
    display: inline-block;
    width: 100px;
    height: 10vh;
    text-align: center;
    line-height: 10vh;
    
}


.scroll-item-active {
    display: inline-block;
    width: 100px;
    height: 10vh;
    text-align: center;
    line-height: 10vh;
    border-top: 8rpx solid #f722a5;
}


.bg_red {
    background: red;
}

.bg_yellow {
    background: yellow;
}

.bg_blue {
    background: blue;
}



.scroll-view-y {
    width: 160rpx;
    height: 90vh;
   
    background: gray;
}

.scroll-view-y .scroll-item-y {
    width: 160rpx;
    height: 120rpx;
}

